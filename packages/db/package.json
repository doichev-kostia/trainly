{
  "name": "@trainly/db",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "./src/db.ts",
  "module": "./src/db.ts",
  "types": "./src/db.ts",
  "type": "module",
  "scripts": {
    "generate": "prisma generate && pnpm run build",
    "migrate": "prisma migrate dev --name $1",
    "build": "tsc && pnpm run compile",
    "build:clean": "rm -rf build && pnpm run build",
    "compile": "pnpm exec swc src --out-dir build",
    "typecheck": "pnpm exec tsc --noEmit --emitDeclarationOnly false",
    "watch": "pnpm exec swc src -d build --watch"
  },
  "exports": {
    ".": {
      "import": "./build/db.js",
      "default": "./build/db.js",
      "types": "./build/db.d.ts"
    },
    "./package.json": "./package.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.61",
    "@swc/helpers": "^0.5.1",
    "@trainly/config": "workspace:^",
    "@types/node": "18",
    "@types/pg": "^8.10.3",
    "chokidar": "^3.5.3",
    "prisma": "^5.3.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@trainly/utils": "workspace:^",
    "kysely": "^0.26.3",
    "pg": "^8.11.3",
    "prisma-kysely": "^1.7.1",
    "zod": "^3.22.2"
  }
}
