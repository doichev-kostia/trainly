{
	"name": "@trainly/utils",
	"private": true,
	"version": "1.0.0",
	"description": "",
	"keywords": [],
	"author": "",
	"type": "module",
	"module": "./build/index.js",
	"types": "./build/index.d.ts",
	"license": "ISC",
	"scripts": {
		"build": "pnpm run typecheck && pnpm run compile && tsc",
		"build:clean": "rm -rf build && pnpm run build",
		"compile": "pnpm exec swc src --out-dir build",
		"typecheck": "pnpm exec tsc --noEmit --emitDeclarationOnly false",
		"watch": "pnpm exec swc src -d build --watch"
	},
	"exports": {
		".": {
			"import": "./build/index.js",
			"default": "./build/index.js",
			"types": "./build/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.61",
		"@swc/helpers": "^0.5.1",
		"@types/node": "20.10.0",
		"chokidar": "^3.5.3",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"@trainly/config": "workspace:^",
		"dotenv": "^16.3.1",
		"zod": "^3.21.4"
	}
}
